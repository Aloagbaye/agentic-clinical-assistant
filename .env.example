# Application Configuration
APP_NAME=agentic-clinical-assistant
APP_VERSION=0.1.0
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Database Configuration
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/clinical_assistant
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis Configuration (for Celery)
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Vector Database Configuration

# FAISS Configuration
FAISS_INDEX_PATH=./data/faiss_index
FAISS_DIMENSION=384

# Pinecone Configuration
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=us-west1-gcp
PINECONE_INDEX_NAME=clinical-assistant

# Weaviate Configuration
WEAVIATE_URL=http://localhost:8080
WEAVIATE_API_KEY=
WEAVIATE_CLASS_NAME=ClinicalDocument

# LLM Configuration
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4-turbo-preview
ANTHROPIC_API_KEY=your-anthropic-api-key
ANTHROPIC_MODEL=claude-3-opus-20240229

# Embedding Model Configuration
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DEVICE=cpu

# Agent Configuration
DEFAULT_VECTOR_BACKEND=faiss
MAX_RETRIEVAL_RESULTS=10
ENABLE_MULTI_BACKEND_RETRIEVAL=false

# Safety & Compliance Configuration
ENABLE_PHI_REDACTION=true
ENABLE_GROUNDING_VERIFICATION=true
ENABLE_PROMPT_INJECTION_DETECTION=true

# Monitoring Configuration
PROMETHEUS_PORT=9090
ENABLE_METRICS=true

# Session & Memory Configuration
SESSION_EXPIRY_HOURS=24
ENABLE_SESSION_MEMORY=true
ENABLE_POLICY_MEMORY=true

# Security Configuration
SECRET_KEY=your-secret-key-change-in-production
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Evaluation Configuration
EVAL_DATASET_PATH=./data/eval_dataset.json
ENABLE_NIGHTLY_EVAL=true
