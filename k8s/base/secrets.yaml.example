# Example secrets file - DO NOT COMMIT ACTUAL SECRETS
# Use kubectl create secret or sealed-secrets/helm secrets

apiVersion: v1
kind: Secret
metadata:
  name: database-credentials
type: Opaque
stringData:
  url: "postgresql+asyncpg://user:password@postgres:5432/clinical_assistant"

---
apiVersion: v1
kind: Secret
metadata:
  name: redis-credentials
type: Opaque
stringData:
  broker-url: "redis://redis:6379/0"
  result-backend: "redis://redis:6379/0"

---
apiVersion: v1
kind: Secret
metadata:
  name: llm-credentials
type: Opaque
stringData:
  openai-api-key: "sk-..."
  anthropic-api-key: "sk-ant-..."

---
apiVersion: v1
kind: Secret
metadata:
  name: vector-db-credentials
type: Opaque
stringData:
  pinecone-api-key: "your-pinecone-key"
  weaviate-api-key: "your-weaviate-key"

